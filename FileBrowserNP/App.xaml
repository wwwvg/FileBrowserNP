        <DataTemplate x:Key="DriveTemplate">
            <StackPanel Orientation="Horizontal" Margin="5,0,10,0">
                <Image Source = "./Icons/HardDrive.png"></Image>
                <TextBlock Text="{Binding Name}"></TextBlock>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="FolderTemplate">
            <StackPanel Orientation="Horizontal" Margin="5,0,10,0">
                <Image Source = "./Icons/Folder.png"></Image>
                <TextBlock Text="{Binding Name}"></TextBlock>
            </StackPanel>
        </DataTemplate>

    </Application.Resources>
</Application>
