<Window x:Class="FileBrowserNP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileBrowserNP.Selectors"
        mc:Ignorable="d"
        Title="{Binding Title}" Icon="./Icons/Browser.png" Height="800" Width="1200" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:FileTemplateSelector x:Key="fileTemplateSelector"
                DriveTemplate="{StaticResource DriveTemplate}"
                FileTemplate="{StaticResource FileTemplate}">
        </local:FileTemplateSelector>
        <local:HeaderTemplateSelector x:Key="headerTemplateSelector"
                DriveHeaderTemplate="{StaticResource DriveHeaderTemplate}"
                FileHeaderTemplate="{StaticResource FileHeaderTemplate}">
        </local:HeaderTemplateSelector>
    </Window.Resources>
    
    <DockPanel>
        <ToolBar DockPanel.Dock="Top"/>
        <StatusBar DockPanel.Dock="Bottom"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"></ColumnDefinition>
                <ColumnDefinition Width="3"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <ListView Grid.Column="0" ItemsSource="{Binding Files}" Margin="5" HorizontalContentAlignment="Stretch" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" CellTemplateSelector="{StaticResource fileTemplateSelector}" 
                                                    HeaderTemplateSelector="{StaticResource headerTemplateSelector}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
            <ContentControl Grid.Column="2"/>

        </Grid>
    </DockPanel>
</Window>
