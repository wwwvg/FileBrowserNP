<UserControl x:Class="FileBrowserNP.Views.DriveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileBrowserNP.Selectors"  
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:FileTemplateSelector x:Key="fileTemplateSelector"
                DriveTemplate="{StaticResource DriveTemplate}"
                FileTemplate="{StaticResource FileTemplate}">
        </local:FileTemplateSelector>
        <local:HeaderTemplateSelector x:Key="headerTemplateSelector"
                DriveHeaderTemplate="{StaticResource DriveHeaderTemplate}"
                FileHeaderTemplate="{StaticResource FileHeaderTemplate}">
        </local:HeaderTemplateSelector>

    </UserControl.Resources>
    <Grid>
        <ListView x:Name="_listView" Grid.Column="0" ItemsSource="{Binding Files}" Margin="5" HorizontalContentAlignment="Stretch" 
                            >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Имя" Width="Auto" CellTemplateSelector="{StaticResource fileTemplateSelector}" />
                </GridView>
            </ListView.View>

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding SelectedCommand}"
                                                CommandParameter="{Binding SelectedFile, Mode=TwoWay}"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding DoubleClickedCommand}"
                                                CommandParameter="{Binding SelectedFile, Mode=TwoWay}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ListView>
    </Grid>
</UserControl>
